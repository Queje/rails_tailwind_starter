<h1>Edit Post</h1>

<%= form_with model: @idea do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, placeholder: @idea.name %>
    <% @idea.errors.full_messages_for(:name).each do |message| %>
        <div class="bg-red-400 rounded w-40 text-center">
            <%= message %>
        </div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, placeholder: @idea.description %>
    <% @idea.errors.full_messages_for(:description).each do |message| %>
        <div class="bg-red-400 rounded w-40 text-center">
            <%= message %>
        </div>
    <% end %>
  </div>

  <div>
    <%= form.label :picture %><br>
    <%= form.text_area :picture, placeholder: @idea.picture %>
    <% @idea.errors.full_messages_for(:picture).each do |message| %>
        <div class="bg-red-400 rounded w-40 text-center">
            <%= message %>
        </div>
    <% end %>
  </div>

  <div class="bg-green-500 hover:bg-green-700 text-white w-40 rounded px-3 text-center">
    <%= form.submit %>
  </div>
<% end %>